{
  "name": "AI Foundry SPA Development",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bullseye",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "true"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest",
      "installBicep": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "8.0",
      "installUsingApt": true,
      "includePreviewVersions": false
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12",
      "installTools": true
    },
    "ghcr.io/devcontainers/features/powershell:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-bicep",
        "ms-vscode.PowerShell",
        "ms-azuretools.vscode-azurefunctions",
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscode-dotnet-runtime",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-eslint",
        "ms-vscode.vscode-json",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-toolsai.vscode-ai-toolkit",
        "ms-python.python",
        "ms-python.pylint",
        "ms-vscode.vscode-dev-containers",
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-docker",
        "github.vscode-github-actions"
      ],

      "settings": {
        "mcp.servers": {
          "microsoft.docs.mcp": {
            "url": "https://learn.microsoft.com/api/mcp",
            "name": "Microsoft Learn",
            "description": "Microsoft documentation and API reference for Azure, Bicep, and .NET development"
          },
          "github.mcp": {
            "url": "https://api.githubcopilot.com/mcp/",
            "name": "GitHub Integration",
            "description": "Enhanced GitHub repository management and integration"
          }
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "prettier.requireConfig": true,
        "editor.formatOnSave": true,
        "files.associations": {
          "*.bicep": "bicep",
          "*.bicepparam": "bicep"
        },
        "bicep.trace.server": "Off",
        "bicep.experimental.deployment": true,
        "powershell.integratedConsole.showOnStartup": false,
        "powershell.scriptAnalysis.enable": true,
        "powershell.codeFormatting.preset": "OTBS",
        "powershell.codeFormatting.useCorrectCasing": true,
        "editor.quickSuggestions": {
          "strings": true
        },
        "azureFunctions.showCoreToolsWarning": false,
        "azureFunctions.projectRuntime": "~4",
        "azureFunctions.deploySubpath": "src/backend",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black"
      }
    }
  },

  "postCreateCommand": "cd ${workspaceFolder}/src/frontend && npm install && cd ${workspaceFolder}/src/backend && dotnet restore && cd ${workspaceFolder} && npm install -g azure-functions-core-tools@4 --unsafe-perm true && npm install -g azurite && mkdir -p .azurite && python -m pip install --upgrade pip && python -m pip install --no-warn-script-location virtualenv black pylint && az extension add --name devcenter --only-show-errors && docker --version",

  "remoteUser": "node",
  
  "forwardPorts": [3000, 4173, 7071],
  "portsAttributes": {
    "3000": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    },
    "4173": {
      "label": "Vite Preview Server", 
      "onAutoForward": "notify"
    },
    "7071": {
      "label": "Azure Functions Runtime",
      "onAutoForward": "notify"
    }
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ]
}
